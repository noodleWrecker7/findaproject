{
  "compilerOptions": {
    "incremental": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "out",
    "strict": true,
    "allowJs": false,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "lib": [
      "ES2020",
      "DOM"
    ],
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
  ]
}
